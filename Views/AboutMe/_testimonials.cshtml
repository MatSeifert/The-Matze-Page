@model WebApp.Models.AboutMeViewModel

@using WebApp.Helper

<div class="wrapper offset-top-s">
  <style scoped>
    @@import url('https://fonts.googleapis.com/css?family=Merriweather');
  </style>
  <h1>
    <span>@Utils.GetUiString("headline.testimonials")</span>
  </h1>

  @{var i = 0;}

  @foreach(var t in Model.Testimonials)
  {
    if (i % 2 != 0)
    {
      <div class="grid grid-1-2 testimonial offset-top-m">
        <div class="testimonial-link">
        </div>
        <div class="testimonial-content">
          <div class="testimonial-quote">
            <p class="offset-bottom-s">@t.Testimonial.Description</p>
            <div>
              <div class="testimonial-image offset-right-m">
                <img src="~/images/@t.Image.Url" alt="@t.Image.Label">
              </div>
              <div class="testimonial-author">@t.Testimonial.Name</div>
              <div class="testimonial-author-details">@t.Testimonial.Position</div>
            </div>
          </div>
        </div>
      </div>
    }
    else 
    {
      <div class="grid grid-2-1 testimonial offset-top-m">
        <div class="testimonial-content">
          <div class="testimonial-quote">
            <p class="offset-bottom-s">@t.Testimonial.Description</p>
            <div>
              <div class="testimonial-image offset-right-m">
                <img src="~/images/@t.Image.Url" alt="@t.Image.Label">
              </div>
              <div class="testimonial-author">@t.Testimonial.Name</div>
              <div class="testimonial-author-details">@t.Testimonial.Position</div>
            </div>
          </div>
        </div>
        <div class="testimonial-link">
        </div>
      </div>
    }
    
    i++;
  }

</div> <!-- endof wrapper -->
 