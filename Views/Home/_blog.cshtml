@model WebApp.Models.HomeViewModel

@using WebApp.Helper

<div class="section latest-blog-posts">
    <h1><span>@Utils.GetUiString("headline.latestPosts")</span></h1>
    <div class="grid grid-1-1-1 blog offset-top-m">

        @foreach(var p in Model.LatestPosts) {
            <div class="blog-post">
                <div class="blog-post-wrapper">
                    <a href='@Url.Action("post", "blog", new { id = p.Post.Id })'>
                        <div class="blog-post-overlay">
                            <div>
                                @p.Post.Date.ToString("dd. MMM")
                            </div>
                        </div>
                        <img src="~/images/blog/thumbnail-@p.TitleImage.Url" alt="Blogcover">
                    </a>
                </div>
                <a href='@Url.Action("post", "blog", new { id = p.Post.Id })'>
                    <div>
                        <span class="post-date mobile">@Utils.GetUiString("blog.postedAt") @p.Post.Date.ToString("dd. MMMM")</span>
                        <h2>@p.Post.Title</h2>
                    </div>
                </a>
                <p>@p.Post.Snippet</p>
            </div>
        }
    </div>

    <div class="center">
        <a href='@Url.Action("index", "blog")' title='@Utils.GetUiString("allPosts")'>
            <button class="btn offset-top-m offset-mobile-none">@Utils.GetUiString("allPosts")</button>
        </a>
    </div>
</div>