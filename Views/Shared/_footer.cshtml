                        <a href="https://stackoverflow.com/users/3775858/matthias-seifert" target="_blank"><img src="~/images/stackoverflow.svg"> StackOverflow</a> <br>
                    </div>
                </div>
            </div>
            <div class="subfooter">
                @Utils.GetUiString("subfooter") &copy; 2018 - Matthias Seifert • 
                Made with <img src="~/images/like.svg" alt="love" style="width: 12px; opacity: 0.5; margin-top: -4px;"> in Dresden • 
                <a href="/Identity/Account/Login"><img src="~/images/icon_login.png" alt="Login Icon" style="width: 22px; margin-top: -3px"> Login</a>
            </div>
        </div>
    </div>
