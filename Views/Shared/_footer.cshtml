    <div class="rotated-background">
        <div class="wrapper">
            <div class="grid grid-2-1-1">
                <div class="grid-item">
                    <h1><span>@Utils.GetUiString("headline.impress")</span></h1>
                    <div class="grid grid-1-1">
                        <div>
                            <div class="two-rows bold">@Utils.GetUiString("impress.disclaimer")</div>

                            <span class="bold"><img src="~/images/heroicon-user.svg" alt ="User-Icon" class="footer-icon"> Matthias Seifert</span> <br>
                            <img src="~/images/heroicon-location.svg" alt ="Adress-Icon" class="footer-icon"> Reisewitzer Straße 5 <br>
                            <span class="no-icon"></span>01159 Dresden <br>
                            <img src="~/images/heroicon-call.svg" alt ="Phone-Icon" class="footer-icon"> 01525 5911161 <br>
                            <img src="~/images/heroicon-mail.svg" alt ="Mail-Icon" class="footer-icon"> matthe.seifert@gmail.com
                        </div>
                        <div>
                            <div class="bold v-padding-m">@Utils.GetUiString("impress.disclaimer.content")</div>
                            <span class="bold"><img src="~/images/heroicon-user.svg" alt ="User-Icon" class="footer-icon"> Matthias Seifert</span> <br>
                            <img src="~/images/heroicon-location.svg" alt ="Adress-Icon" class="footer-icon"> Reisewitzer Straße 5 <br>
                            <span class="no-icon"></span>01159 Dresden
                        </div>
                    </div>
                </div>
                <div class="grid-item disclaimer">
                    <h1><span>@Utils.GetUiString("headline.disclaimer")</span></h1>
                    <div class="v-padding-m lspacing-2">
                        <a href="#"><img src="~/images/heroicon-lock.svg" alt ="Lock-Icon" class="footer-icon"> @Utils.GetUiString("privcy")</a> <br>
