                        <a href="#"><img src="~/images/heroicon-code.svg" alt ="Code-Icon" class="footer-icon"> @Utils.GetUiString("licenses")</a> <br>
                    </div>
                </div>
                <div class="grid-item socialmedia">
                    <h1><span>@Utils.GetUiString("headline.social")</span></h1>
                    <div class="v-padding-m social-links-footer lspacing-2">
                        <a href="https://twitter.com/einMATZEmalig" target="_blank"><img src="~/images/twitter.svg"> Twitter</a> <br>
                        <a href="https://www.xing.com/profile/Matthias_Seifert29/" target="_blank"><img src="~/images/xing.svg"> Xing</a> <br>
