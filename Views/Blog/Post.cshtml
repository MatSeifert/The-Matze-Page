@model WebApp.Models.BlogPostViewModel

@await Html.PartialAsync("_adminTools")

@await Html.PartialAsync("_header", Model)

<div class="blogpost-featured">
    <div class="blogpost-featured-rotated">
        <img src="~/images/blog/@Model.Post.TitleImage.Url" alt="@Model.Post.TitleImage.Label" class="hero-shot">
    </div>
</div>

<div class="wrapper" style="margin-top: 650px;">
    <div class="grid grid-3-1">
        <div>
            <h1>
                <span>@Model.Post.Post.Title</span>
            </h1>
            <div class="bold blogpost-content-date">
                <img src="~/images/icon_posted-black.png" alt="Post Icon"> @ViewBag.UiStrings["blog.postedAt"] @Model.Post.Post.Date.ToString("dd. MMMM yyyy")
            </div>

            <div class="blogpost-featured-snippet bold">@Model.Post.Post.Snippet</div>
            <div id="content">@Model.Post.Post.Content</div>
        </div>
        <div id="1">

        </div>
    </div>
</div>

<script>
    var converter = new showdown.Converter();
    $('#content').html(converter.makeHtml($('#content').text()));
</script>